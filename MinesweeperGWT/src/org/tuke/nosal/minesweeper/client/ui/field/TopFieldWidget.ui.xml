<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:ms="urn:import:org.tuke.nosal.minesweeper.client.ui">
	<ui:style field="style">
		.body {
			height: 30px;
			width: 100%;
			border: 1px solid black;
		}
		
		.minesLabel {
			border: 2px solid red;
			width: 40px;
			height: 100%;
			font-weight: bold;
			background-color:black;
			color:red;
			margin:0px 0px 0px 0px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.body}">
		<table width="100%" height="100%">
			<tr>
				<td class="{style.minesLabel}">
					<g:Label ui:field="mineCountingLabel"></g:Label>
				</td>
				<td>
				</td>
				<td class="{style.minesLabel}">
					<g:Label ui:field="timerLabel"></g:Label>
				</td>
			</tr>
		</table>
	</g:HTMLPanel>
</ui:UiBinder>